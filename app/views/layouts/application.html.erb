<!DOCTYPE html>
<html>
<head>
  <title>Kihon</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
    $(document).ready(function()
        {
        $("#book-table").tablesorter({sortList:[[1,0]]});
          }
    );
  </script>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <ul class="nav">
        <li class="brand"><%= link_to "Kihon", root_path %></li>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Add Book", new_book_path  %></li>
        <% if user_signed_in? %>
          <li>Signed in as <%= current_user.email %>. Not you?</li>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %></li>
        <% end %>
        <li><%= link_to "sign in with Google", user_omniauth_authorize_path(:google_oauth2) %></li>
      </ul>
    </div>
  </div>
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
