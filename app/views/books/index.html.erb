<h1>List of Books</h1>
<table id="book-table" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |book| %>
    <tr>
      <td><img src="<%= book.get_image %>"></td>
      <td><%= link_to book.get_title, book_path(book.isbn) %></td>
      <td><%= book.get_author %></td>
      <td><%= book.isbn %></td>
      <td><%= book.quantity %></td>
      <td><%= link_to 'Edit', edit_book_path(book.isbn) %>
      <%= link_to 'Show', book_path(book.isbn) %></td>
    </tr>
<% end %>
  </tbody>
</table>
