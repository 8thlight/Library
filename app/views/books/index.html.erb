<script type="text/javascript">
  $(document).ready(function()
  {$("#book-table").tablesorter({sortList:[[1,0]]});});
</script>
<h1>List of Books</h1>
<table id="book-table" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Quantity</th>
      <th>Quantity Left</th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |book| %>
    <tr>
      <td><img src="<%= book.get_image %>"></td>
      <td><%= link_to book.get_title, book_path(book.isbn) %></td>
      <td><%= book.get_author %></td>
      <td><%= book.isbn %></td>
      <td><%= book.quantity %></td>
      <td><%= book.quantity_left %></td>
      <td><%= link_to 'Edit', edit_book_path(book.isbn) %>
      <%= link_to 'Show', book_path(book.isbn) %>
      <% if user_signed_in? %>
        <%= link_to "Check out", check_out_path(book.isbn) %></td>
        <%= link_to "return", return_book_path(book.isbn) %></td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>
